<CollapsablePanel as |panel|>
  <panel.header>
    <h3>
      {{this.pageTitle}}
      <span class="pull-right"> {{this.message}}</span>
    </h3>
  </panel.header>

  <panel.content>
    <div class="row align-items-center justify-content-center mb-3">
      <C3Chart
        @data={{this.data}}
        @padding={{this.padding}}
        @title={{this.title}}
        @size={{this.size}}
        @axis={{this.axis}}
        @grid={{this.grid}}
        @tooltip={{this.tooltip}}
        @legend={{this.legend}}
        @oninit={{this.setup}}
        @onmouseover={{this.mouseover}}
        @onmouseout={{this.mouseout}}
        @onresize={{this.resizing}}
      />
    </div>
  </panel.content>
</CollapsablePanel>

<div class="container mt-2">
  <span class="pull-right text-primary">Hover over chart or resize window to trigger events</span>
</div>

<div class="mt-5">
  <h5>templates/chart-events.hbs</h5>
  <CodeSnippet @name="chart-events.hbs" />
</div>

<div class="mt-5">
  <h5>controllers/chart-events.js</h5>
  <CodeSnippet @name="chart-events.js" />
</div>